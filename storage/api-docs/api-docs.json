                                                },
                                                "role": {
                                                    "type": "string",
                                                    "example": "usuario"
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                },
                                                "active_tokens": {
                                                    "description": "Número de tokens activos",
                                                    "type": "integer",
